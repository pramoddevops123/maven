        stage('Checkout') {
            steps {
                echo 'C // git url: 'https://github.com/your/repo.git')

                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh  // sh './build.sh
            }
        }

        stage('Test') {
            steps {
                echo 'test the application...'
                sh  // sh './run-tests.sh'
            }
        }

        stage('deploy') {
            steps {
                echo 'deploy the application...'
                sh // sh './deploy.sh'
            }
        }
    }
